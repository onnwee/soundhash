# Docker-specific Environment Configuration
# Copy this to .env.docker and configure with your API keys

# Database (configured for Docker networking)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=soundhash
DATABASE_USER=soundhash_user
DATABASE_PASSWORD=soundhash_password123

# API Keys (fill these in with your actual keys)
YOUTUBE_API_KEY=your_youtube_api_key_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_CONSUMER_KEY=your_twitter_consumer_key_here
TWITTER_CONSUMER_SECRET=your_twitter_consumer_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=soundhash_bot_v1.0
REDDIT_REFRESH_TOKEN=your_reddit_refresh_token_here

# OAuth and Authentication
CALLBACK_BASE_URL=http://localhost:8000
AUTH_SERVER_HOST=0.0.0.0
AUTH_SERVER_PORT=8000

# Processing Settings
TEMP_DIR=/app/temp
MAX_CONCURRENT_DOWNLOADS=3
SEGMENT_LENGTH_SECONDS=30
FINGERPRINT_SAMPLE_RATE=22050

# Target Channels
TARGET_CHANNELS=UCo_QGM_tJZOkOCIFi2ik5kA,UCDz8WxTg4R7FUTSz7GW2cYA,UCBvc2dNfp1AC0VBVU0vRagw

# Bot Settings
BOT_NAME=@soundhash_bot
BOT_KEYWORDS=find clip,source video,original,what song